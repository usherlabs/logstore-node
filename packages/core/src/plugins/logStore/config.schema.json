{
	"$id": "config.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"description": "LogStore plugin configuration",
	"required": ["cassandra", "logStoreConfig"],
	"additionalProperties": false,
	"properties": {
		"cassandra": {
			"type": "object",
			"description": "Apache Cassandra configuration",
			"required": ["hosts", "username", "password", "keyspace", "datacenter"],
			"additionalProperties": false,
			"properties": {
				"hosts": {
					"type": "array",
					"items": {
						"type": "string",
						"format": "hostname"
					},
					"minItems": 1,
					"uniqueItems": true
				},
				"username": {
					"type": "string"
				},
				"password": {
					"type": "string"
				},
				"keyspace": {
					"type": "string"
				},
				"datacenter": {
					"type": "string"
				}
			}
		},
		"logStoreConfig": {
			"type": "object",
			"properties": {
				"refreshInterval": {
					"type": "integer",
					"description": "Interval (in milliseconds) in which to refresh LogStore config from Core API (0 = disable)"
				}
			},
			"additionalProperties": false,
			"default": {
				"refreshInterval": 600000
			}
		},
		"cluster": {
			"type": "object",
			"description": "LogStore node cluster config",
			"required": ["clusterSize", "myIndexInCluster"],
			"additionalProperties": false,
			"properties": {
				"clusterAddress": {
					"type": "string"
				},
				"clusterSize": {
					"type": "number"
				},
				"myIndexInCluster": {
					"type": "number"
				}
			},
			"default": {
				"clusterSize": 1,
				"myIndexInCluster": 0
			}
		},
		"programs": {
			"type": "object",
			"description": "LogStore Programs config",
			"additionalProperties": false,
			"properties": {
				"chainRpcUrls": {
					"description": "Mapping of ChainId to its RPC URL",
					"type": "object",
					"additionalProperties": {
						"type": "string"
					}
				}
			},
			"default": {
				"chainRpcUrls": {
					"137": "https://polygon-rpc.com"
				}
			}
		}
	}
}
